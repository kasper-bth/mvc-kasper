{% extends 'base.html.twig' %}

{% block title %}Update {{ book.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>Update Book</h1>
        
        <form method="post" action="{{ path('library_update', {'id': book.id}) }}">
            <div>
                <label for="title">Title</label>
                <input type="text" id="title" name="title" value="{{ book.title }}" required>
            </div>
            <div>
                <label for="author">Author</label>
                <input type="text" id="author" name="author" value="{{ book.author }}" required>
            </div>
            <div>
                <label for="isbn">ISBN</label>
                <input type="text" id="isbn" name="isbn" value="{{ book.ISBN }}" required>
            </div>
            <div>
                <label for="img">Image URL</label>
                <input type="text" id="img" name="img" value="{{ book.img }}" required>
            </div>
            <button type="submit">Update</button>
        </form>
    </div>
    <footer class="footer">
        <p>&copy; Copyright ägs av mig och bilder tillåts att användas och har hämtats från wikipedia.</p>
    </footer>
{% endblock %}