{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block body %}
    <div class="container">
        <h1>Draw a Card</h1>
        {% if card %}
            <h3>Drawn Card:</h3>
            <div class="card {% if card matches '/♥|♦/' %}red{% else %}black{% endif %}">
                <p>{{ card }}</p>
            </div>
        {% else %}
            <div class="alert alert-warning">No cards left in the deck!</div>
        {% endif %}
        
        <p>Cards remaining: {{ count }}</p>
        
        <a href="{{ path('card_deck_draw') }}" class="btn btn-primary">Draw Another</a>
    </div>

    <footer class="footer">
        <p>&copy; Copyright ägs av mig och bilder tillåts att användas.</p>
    </footer>
{% endblock %}