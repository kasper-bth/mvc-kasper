{% extends 'base.html.twig' %}

{% block title %}Card{% endblock %}

{% block body %}
    <div class="container">
        <h1>Deck of Cards</h1>
        <p>Total cards: {{ count }}</p>
    
        <h3>Sorted by Suit and Value</h3>
        {% for card in deck %}
            <p>{{ card }}</p>
        {% endfor %}
    </div>

    <footer class="footer">
        <p>&copy; Copyright ägs av mig och bilder tillåts att användas.</p>
    </footer>
{% endblock %}